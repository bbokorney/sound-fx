root = true
 
[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
 
# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2
 
# Matches all json or yaml
[{**/*.json,**/*.yml}]
indent_style = space
indent_size = 2
